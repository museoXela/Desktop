<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="MuseoCliente.modResultadosPiezas"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="480">

	<DockPanel x:Name="LayoutRoot" Background="{DynamicResource White}">
		<Border DockPanel.Dock="Top" Margin="0" Height="30" VerticalAlignment="Top" BorderBrush="{DynamicResource Gray}" BorderThickness="0,0,0,2">
			<DockPanel>
				<Label DockPanel.Dock="Left">Resultados</Label>
				<Label Height="30" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" Style="{DynamicResource CustomLabel}" DockPanel.Dock="Right">
					<Button x:Name="btnEditar" Height="27" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold">&#9998;</Button>
				</Label>
			</DockPanel>
		</Border>
		<StackPanel>
			<Label Height="20"/>
			<DockPanel Height="35" HorizontalAlignment="Center">
				<RadioButton x:Name="rbTodas" VerticalAlignment="Center" Margin="10,0,10,0">Todas</RadioButton>
				<RadioButton x:Name="rbClasif" VerticalAlignment="Center" Margin="0,0,10,0">Clasificación</RadioButton>
				<RadioButton x:Name="rbExhibicion" VerticalAlignment="Center" Margin="0,0,10,0">Exhibición</RadioButton>
				<RadioButton x:Name="rbBodega" VerticalAlignment="Center" Margin="0,0,10,0">Bodega</RadioButton>
				<RadioButton x:Name="rbUltimas" VerticalAlignment="Center" Margin="0,0,10,0">Últimas</RadioButton>
			</DockPanel>
			<DockPanel Height="375">
				<StackPanel Margin="10">
					<GridViewColumnHeader x:Name="gvResultados" Height="355"/>
				</StackPanel>
			</DockPanel>
			<Label Height="20"></Label>
		</StackPanel>
	</DockPanel>
</UserControl>