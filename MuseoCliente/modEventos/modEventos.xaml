<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="MuseoCliente.modEventos"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="480">

	<DockPanel x:Name="LayoutRoot" Background="{DynamicResource White}" Loaded="LayoutRoot_Loaded">
		<Border DockPanel.Dock="Top" Margin="0" Height="30" VerticalAlignment="Top" BorderBrush="{DynamicResource Gray}" BorderThickness="0,0,0,2">
			<DockPanel>
				<Label DockPanel.Dock="Left" FontFamily="/MuseoCliente;component/Font/#Source Sans Pro" Style="{DynamicResource CustomMaskedTextBox}">Eventos</Label>
				<Label Height="30" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" Style="{DynamicResource CustomLabel}" DockPanel.Dock="Right">
					<Button x:Name="btnNuevo" Height="27" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Click="btnNuevo_Click">&#10133;</Button>
				</Label>
				<Label Height="30" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" Style="{DynamicResource CustomLabel}" DockPanel.Dock="Right">
					<Button x:Name="btnBuscar" Height="27" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Click="btnBuscar_Click">&#128269;</Button>
				</Label>
				<TextBox x:Name="txtBuscar" Height="20" Width="150" HorizontalAlignment="Right" Margin="0,0,5,0" Style="{DynamicResource CustomTextBox}" FontFamily="/MuseoCliente;component/Font/#Source Sans Pro"/>
			</DockPanel>
		</Border>
		<StackPanel>
			<Label Height="20"/>
			<StackPanel Height="205">
				<Label VerticalAlignment="Center" Margin="10,0,0,0" FontFamily="/MuseoCliente;component/Font/#Source Sans Pro" Style="{DynamicResource CustomMaskedTextBox}">Próximos Eventos:</Label>
                <DataGrid x:Name="gvProximos" Margin="15,0,15,0" Height="153" FontFamily="/MuseoCliente;component/Font/#Source Sans Pro"/>
			</StackPanel>
			<StackPanel Height="205">
				<Label VerticalAlignment="Center" Margin="10,0,0,0" FontFamily="/MuseoCliente;component/Font/#Source Sans Pro" Style="{DynamicResource CustomMaskedTextBox}">Eventos Concluidos:</Label>
                <DataGrid x:Name="gvConcluidos" Margin="15,0,15,0" Height="153" FontFamily="/MuseoCliente;component/Font/#Source Sans Pro" Style="{DynamicResource CustomDataGrid}"/>
			</StackPanel>
			<Label Height="20"></Label>
		</StackPanel>
	</DockPanel>
</UserControl>