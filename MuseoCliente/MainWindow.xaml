<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MuseoCliente" x:Class="MuseoCliente.MainWindow"
        Title="MainWindow" Height="500" Width="725" Style="{DynamicResource Ventana}">
	<Window.Resources>
		<Storyboard x:Key="OnClick1"/>
	</Window.Resources>
	<DockPanel>
		<Menu HorizontalAlignment="Left" Width="184" Margin="0,45,0,0" Background="{x:Null}">
			<DockPanel Height="30" LastChildFill="False" Width="169">
				<TextBox x:Name="txtBusqueda" Height="20" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="124" Margin="0,5" Style="{DynamicResource CustomTextBox}" FontFamily="/MuseoCliente;component/Font/#Source Sans Pro" Foreground="{DynamicResource GrisDark}" FocusVisualStyle="{DynamicResource Focus}"/>
				<Button Width="44.333" Height="{Binding Height, ElementName=textBox}" Margin="0,5" Style="{DynamicResource BlueButton}" Foreground="White" FontSize="26.667">
					<TextBlock Style="{DynamicResource Iconos}" FontSize="21.333">&#128269;</TextBlock>
				</Button>
			</DockPanel>
			<Path Data="M3,5 L167,5" Fill="{DynamicResource Gris}" Height="1" Stretch="Fill" Stroke="{DynamicResource Gris}" Width="165"/>
			<MenuItem Height="34.96" Width="184" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="{DynamicResource Negro}" Style="{DynamicResource CustomMenuItem}" FocusVisualStyle="{DynamicResource CustomFocus}" FontSize="16">
				<MenuItem.Header>
					<TextBlock Style="{DynamicResource Iconos}" FontSize="32" Foreground="{DynamicResource Negro}">&#128203;<TextBlock Style="{DynamicResource SourceSans}" FontSize="18.667">Inventario</TextBlock></TextBlock>
				</MenuItem.Header>
			</MenuItem>
			<Path Data="M3,5 L167,5" Fill="{DynamicResource Gris}" Height="1" Stretch="Fill" Stroke="{DynamicResource Gris}" Width="165"/>
			<MenuItem Height="34.96" Width="184" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="{DynamicResource Negro}" Style="{DynamicResource CustomMenuItem}" FocusVisualStyle="{DynamicResource CustomFocus}" FontSize="16">
				<MenuItem.Header>
					<TextBlock Style="{DynamicResource Iconos}" FontSize="32" Foreground="{DynamicResource Negro}">&#59392;<TextBlock Style="{DynamicResource SourceSans}" FontSize="18.667">Operaciones</TextBlock></TextBlock>
				</MenuItem.Header>
			</MenuItem>
			<Path Data="M3,5 L167,5" Fill="{DynamicResource Gris}" Height="1" Stretch="Fill" Stroke="{DynamicResource Gris}" Width="165"/>
			<MenuItem Height="34.96" Width="184" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="{DynamicResource Negro}" Style="{DynamicResource CustomMenuItem}" FocusVisualStyle="{DynamicResource CustomFocus}" FontSize="16">
				<MenuItem.Header>
					<TextBlock Style="{DynamicResource Iconos}" FontSize="32" Foreground="{DynamicResource Negro}">&#127748;<TextBlock Style="{DynamicResource SourceSans}" FontSize="18.667">Fotografías</TextBlock></TextBlock>
				</MenuItem.Header>
			</MenuItem>
			<Path Data="M3,5 L167,5" Fill="{DynamicResource Gris}" Height="1" Stretch="Fill" Stroke="{DynamicResource Gris}" Width="165"/>
			<MenuItem Height="34.96" Width="184" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="{DynamicResource Negro}" Style="{DynamicResource CustomMenuItem}" FocusVisualStyle="{DynamicResource CustomFocus}" FontSize="16">
				<MenuItem.Header>
					<TextBlock Style="{DynamicResource Iconos}" FontSize="32" Foreground="{DynamicResource Negro}">&#128101;<TextBlock Style="{DynamicResource SourceSans}" FontSize="18.667">Usuarios</TextBlock></TextBlock>
				</MenuItem.Header>
			</MenuItem>
			<Path Data="M3,5 L167,5" Fill="{DynamicResource Gris}" Height="1" Stretch="Fill" Stroke="{DynamicResource Gris}" Width="165"/>
			<MenuItem Height="34.96" Width="184" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="{DynamicResource Negro}" Style="{DynamicResource CustomMenuItem}" FocusVisualStyle="{DynamicResource CustomFocus}" FontSize="16">
				<MenuItem.Header>
					<TextBlock Style="{DynamicResource Iconos}" FontSize="32" Foreground="{DynamicResource Negro}">&#128240;<TextBlock Style="{DynamicResource SourceSans}" FontSize="18.667">Investigaciones</TextBlock></TextBlock>
				</MenuItem.Header>
			</MenuItem>
		</Menu>
		<Border Height="45" VerticalAlignment="Top" DockPanel.Dock="Top" Margin="-184,0,0,0" BorderBrush="{DynamicResource GrisDark}" BorderThickness="0,0,0,1" >
			<DockPanel LastChildFill="False" Background="{DynamicResource Blanco}">
				<Label Height="29" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,5,0,10" Style="{DynamicResource MenuLabel}">
					<TextBlock HorizontalAlignment="Center" FontSize="26.667" Foreground="{DynamicResource PureBlue}" FontWeight="Bold" Style="{DynamicResource Iconos}">&#8962;</TextBlock>
				</Label>
				<Label Height="29" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,5,0,10" Style="{DynamicResource MenuLabel}" DockPanel.Dock="Right">
					<TextBlock HorizontalAlignment="Center" FontSize="26.667" Foreground="{DynamicResource PureBlue}" FontWeight="Bold" Style="{DynamicResource Iconos}">&#9881;</TextBlock>
				</Label>
				<Label Height="29" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,5,0,10" Style="{DynamicResource MenuLabel}" DockPanel.Dock="Right">
					<TextBlock HorizontalAlignment="Center" FontSize="26.667" Foreground="{DynamicResource PureBlue}" FontWeight="Bold" Style="{DynamicResource Iconos}">&#10067;</TextBlock>
				</Label>
				<Label Height="29" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,5,0,10" Style="{DynamicResource MenuLabel}" DockPanel.Dock="Right">
					<TextBlock x:Name="lblConectado" HorizontalAlignment="Center" FontSize="26.667" Foreground="{DynamicResource PureBlue}" FontWeight="Bold" Style="{DynamicResource Iconos}">&#9729;</TextBlock>
				</Label>
			</DockPanel>
		</Border>
		<Border BorderThickness="1,0,0,0" Background="{DynamicResource Blanco}" BorderBrush="{DynamicResource GrisDark}"/>
        
	</DockPanel>
</Window>
